<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/azulCielo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saludo"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:background="#73A4DF"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crud de productos"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/refProduct"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editReference"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Ingrese referencia"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/baseline_article_24"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desProduct"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="DescripciÃ³n"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/baseline_mode_24"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Costo"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/editPrice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Costo"
        android:textAlignment="center"
        android:inputType="textPersonName"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de producto"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spRefType"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/idSave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_save_24"
            />
        <ImageButton
            android:id="@+id/idSearch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_search_24"
            />

        <ImageButton
            android:id="@+id/idEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/idDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            />
        <ImageButton
            android:id="@+id/idList"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_list_24"
            />

    </LinearLayout>

</LinearLayout>